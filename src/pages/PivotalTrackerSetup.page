<apex:page controller="PivotalTrackerSetup">
    <apex:form >
        <apex:sectionHeader title="PivotalTracker Salesforce Sync" subtitle="Setup"/>
        <apex:pageBlock >
            <apex:pageMessages ></apex:pageMessages>
            <apex:pageBlockButtons >
                <apex:commandButton value="Run Sync Now" action="{!sync}" immediate="true"/>
                <apex:commandButton value="Update Token" action="{!save}"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection columns="1">
                <apex:inputField value="{!config.API_Token__c}"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>